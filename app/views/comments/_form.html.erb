<%= javascript_pack_tag 'comment_form' %>

<%= form_with(model: [ @book, @book.comments.build ], remote: true, class: 'my_comment_form') do |form| %>
  <div class="form-group">
    <%= form.text_area :body, placeholder: "Review here", class: "form-control" %>
  </div>

  <div class="form-group" style="margin-top:10px">
    <%= form.submit %>
  </div>
<% end %>

