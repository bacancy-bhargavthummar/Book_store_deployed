<article>
  <h2>Thanks, you paid <strong>INR : <%= session[:grand_total] %></strong> !</h2>
  <h1>Your Cart</h1>
  <h5>Time : <%= Time.now.strftime("%m/%d/%Y at %I:%M %p") %></h5>
  <h5>Name : <%= @cart.user.name %></h5>
  <hr>
  <h5>Phone No. : <%= @cart.user.phone_no %></h5>
  <h5>Email : <%= @cart.user.email %></h5>
  <h5>Delivery Address: <%= @cart.delivery_address %></h5>
  <h5>Bill No : <%="#{@cart.id}."%> </h5>
  <hr>
  <table class="table">
    <thead class="thead-dark">    
      <th>Quantity</th>
      <th>Book Name</th>
      <th>Price/Unit</th>
      <th>Cost</th>
    </thead>
    <tbody>
      <% @cart.line_items.each do |line_item| %>
        <tr>
          <td><%= line_item.quantity %></td>
          <td><%= line_item.book.name %></td>
          <td><%= line_item.book.price %></th>
          <td><%= line_item.total_price %></td> 
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="3">Total:</th>
        <td class="price"><%= @cart.total_price %> INR</td>
      </tr>
    </tfoot>
  </table>
  <h2>=> Your order is placed and request is in process.</h2>
  <h2>=> You will get mail of your order status and shipment information.</h2>
  <hr>
  <%= link_to "Home",root_path %> |
  <%= link_to 'Download PDF',  get_pdf_charges_path(@cart), target: :_blank %>
</article>
